<application>
  <component name="DefaultFont">
    <option name="FONT_SIZE" value="14" />
    <option name="FONT_FAMILY" value="Fira Code" />
    <option name="SECONDARY_FONT_FAMILY" value="DejaVu Sans Mono for Powerline" />
  </component>
  <component name="EditorSettings">
    <option name="USE_SOFT_WRAPS" value="MAIN_EDITOR:CONSOLE" />
  </component>
  <component name="TodoConfiguration">
    <pattern pattern="\btodo\b.*" />
    <pattern pattern="\bfixme\b.*" />
    <pattern case-sensitive="true" pattern="\bfixme ztw\b.*" />
    <filter name="ztw">
      <pattern index="2" />
    </filter>
    <filter name="fixme">
      <pattern index="1" />
    </filter>
  </component>
</application>